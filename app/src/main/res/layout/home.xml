<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:id="@+id/LinearLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/Background_Screen">
     

<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">    

    <TextView
        android:id="@+id/Home"
        android:text="Home"
        style="@style/Headding"/>
   
 </RelativeLayout>  
 

 <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
 <RelativeLayout 
    android:id="@+id/RelativeLayout02"
    android:layout_below="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >  

      <Button
          android:id="@+id/Button1"
          style="@style/NextHome"        
          android:text="Sale" />
      
      <Button
          android:id="@+id/Button2"
          android:layout_below="@+id/Button1"
          style="@style/NextHome"
          android:text="Refund" 
          android:visibility="visible"/>
      
       <Button
          android:id="@+id/Button3"
          android:layout_below="@+id/Button2"
          style="@style/NextHome" 
          android:text="Cancel" 
          android:visibility="gone"/>
       
       <Button
          android:id="@+id/Button4"
          android:layout_below="@+id/Button3"
          style="@style/NextHome" 
          android:text="Check Card" 
          android:visibility="gone"/>
       
       <Button
          android:id="@+id/Button5"
          android:layout_below="@+id/Button4"
          style="@style/NextHome" 
          android:text="Socket" 
          android:visibility="gone"/>
       
       <Button
          android:id="@+id/Button6"
          android:layout_below="@+id/Button5"
          style="@style/NextHome" 
          android:text="Firmware upgrade" />
                
        <Button
          android:id="@+id/Button7"
          android:layout_below="@+id/Button6"
          style="@style/NextHome" 
          android:text="Get App Info" />
        
        <!-- Megha 110315 - Added new button for Remote Configuration -->
          <Button
          android:id="@+id/remoteConfigurationButton"
          android:layout_below="@+id/Button7"
          style="@style/NextHome" 
          android:text="Remote Configuration" />
        <!-- End of changes -->  
                
       
        <Button
          android:id="@+id/rolButton"
          android:layout_below="@+id/remoteConfigurationButton"
          style="@style/NextHome" 
          android:text="Send Error Logs" />
       
        <Button
          android:id="@+id/tokenSaleBtn"
          android:layout_below="@+id/rolButton"
          style="@style/NextHome" 
          android:text="Token Sale" />
               
        <Button
          android:id="@+id/tokenRefundBtn"
          android:layout_below="@+id/tokenSaleBtn"
          style="@style/NextHome" 
          android:text="Token Refund" />
        
        <Button
          android:id="@+id/dayfirstBtn"
          android:layout_below="@+id/tokenRefundBtn"
          style="@style/NextHome" 
          android:text="Day First Transaction" />
                       
        <Button
          android:id="@+id/Dummy"
          android:layout_below="@+id/dayfirstBtn"
          android:layout_width="180dp"
          android:layout_height="30dp" 
          android:text=""
          android:visibility="invisible" />
        
         
        
</RelativeLayout>

</ScrollView>
    
</LinearLayout>

