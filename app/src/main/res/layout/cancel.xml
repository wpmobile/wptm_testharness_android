<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:id="@+id/LinearLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/Background_Screen" xmlns:tools="http://schemas.android.com/tools" tools:context=".screen.Cancel">
     

<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">    

    <TextView
        android:id="@+id/screen_name"
        android:text="Cancel"
        style="@style/Headding"/>
   
 </RelativeLayout>  
 
 <RelativeLayout 
    android:id="@+id/RelativeLayout02"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">  

     <TextView
         android:id="@+id/MTR"        
         style="@style/CodeFontSmall" 
         android:text="MTR:" /> 
         
      <EditText 
         android:id="@+id/editMTR"        
         android:layout_toRightOf="@+id/MTR"           
         style="@style/EditTextsmall" 
         android:inputType="number" 
         android:maxLength="20"/>  
         
       <TextView
         android:id="@+id/CN"  
         android:layout_below="@+id/MTR"      
         style="@style/CodeFontSmall" 
         android:text="Card Number:" /> 
         
      <EditText 
         android:id="@+id/editCN" 
         android:layout_below="@+id/MTR"        
         android:layout_toRightOf="@+id/CN"           
         style="@style/EditTextsmall" 
         android:inputType="number"
         android:maxLength="19" />  
         
       <TextView
         android:id="@+id/PGTR"  
         android:layout_below="@+id/editCN"      
         style="@style/CodeFontSmall" 
         android:text="PGTR:" /> 
         
       <TextView 
	    android:id="@+id/pgtr" 
	    android:layout_width="wrap_content"
	    android:layout_below="@+id/editCN" 
	    android:layout_marginTop="15dp"
		android:layout_toRightOf="@+id/PGTR"
		style="@style/Textsmall"
		android:text="PGTR"	/>
         
      <EditText 
         android:id="@+id/editPGTR" 
         android:layout_below="@+id/editCN"        
         android:layout_toRightOf="@+id/pgtr"           
         style="@style/EditTextsmall" 
         android:inputType="number"
         android:maxLength="13" />            
         
       <TextView
            android:id="@+id/ED"
            style="@style/CodeFontSmall" 
            android:layout_below="@+id/PGTR"
            android:text="Expiry Date: " />

        <EditText
            android:id="@+id/editDate"
            style="@style/EditTextsmall"
            android:layout_below="@+id/PGTR"
            android:layout_toRightOf="@+id/ED"
            android:inputType="date" />
      
      
        
      
</RelativeLayout>

 <LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_marginTop="25dp"
  		android:layout_marginBottom="5dp" 
		android:layout_height="fill_parent"
		android:gravity="center_horizontal">
	
	 <Button
	     android:id="@+id/button"
	     style="@style/Button"
	     android:layout_width="125dp"
	     android:text="Submit" />
 
</LinearLayout>

</LinearLayout>