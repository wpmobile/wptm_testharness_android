<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:id="@+id/LinearLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/Background_Screen">
     

<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">    

    <TextView
        android:id="@+id/Home"
        android:text="Response"
        style="@style/Headding"/>
   
 </RelativeLayout>  
 
 <RelativeLayout 
    android:id="@+id/RelativeLayout02"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">  

    			<TextView 
				    android:id="@+id/PGTR" 				  
					style="@style/CodeFontSmall" 					
					android:text="PGTR:"/>

				<TextView 
				    android:id="@+id/pgtr" 
					android:layout_toRightOf="@+id/PGTR"
					style="@style/Textsmall"
					android:text="AM56SH$MD"	/>

				<TextView 
				    android:id="@+id/AC" 
				    android:layout_below="@+id/PGTR"
					style="@style/CodeFontSmall"
					android:text="Auth Code:" />

				<TextView 
				    android:id="@+id/ac" 
				    android:layout_below="@+id/PGTR"					
					android:layout_toRightOf="@+id/AC" 
					style="@style/Textsmall" 
					android:text="True" />
					
				<TextView 
				    android:id="@+id/RM" 
				    android:layout_below="@+id/AC"
					style="@style/CodeFontSmall"
					android:text="Response Msg:" />

				<TextView 
				    android:id="@+id/rm" 
				    android:layout_below="@+id/AC"
					android:layout_toRightOf="@+id/RM" 
					style="@style/Textsmall" 
					android:text="Sucess" />	

         
      
        
      
</RelativeLayout>

 

</LinearLayout>