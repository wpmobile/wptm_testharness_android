<?xml version="1.0" encoding="utf-8"?>
 <selector
 xmlns:android="http://schemas.android.com/apk/res/android">

 <item android:state_pressed="true" >
<shape android:shape="rectangle">
    <solid
        android:color="@drawable/Background_color" />
     <stroke
        android:width="1dp"
        android:color="@drawable/Clicked_bg" /> 
</shape>
</item>

<item android:state_focused="true" >
<shape>
    <gradient
        android:endColor="@drawable/Background_color"
        android:centerColor="@drawable/Background_color"
        android:startColor="@drawable/Background_color"
        android:centerX="0.5"
        android:centerY="0.5"
        android:angle="270" />
    <stroke
        android:width="3dp"
        android:color="@drawable/Clicked_bg"/>
    <corners
        android:radius="6dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
</item>
 <item>        
 <shape>
     <gradient
        android:endColor="@drawable/Background_color"
        android:centerColor="@drawable/Background_color"
        android:startColor="@drawable/Background_color"
        android:centerX="0.5"
        android:centerY="0.5"
        android:angle="270" />
     <stroke
    
        android:width="1dp"
        android:color="@drawable/defult_bg"
        />
     <corners
        android:radius="7dp" />
   </shape>
   </item>
  </selector>